<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spiel21.application.RegistrationActivity">


    <!-- create Bereich  -->


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_women"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weiblich"
            android:layout_weight="1"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioButton_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ¤nnlich"
            android:layout_weight="1" />


    </RadioGroup>

    <EditText
        android:id="@+id/create_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:hint="Benutzername"
        android:inputType="textPersonName"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/create_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_username"
        android:hint="Geburtsjahr"
        android:layout_margin="5dp"
        android:phoneNumber="true" />


    <EditText
        android:id="@+id/create_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_birth"
        android:hint="Kennwort"
        android:password="true"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/create_password2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_password1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Kennwort wiederholen"
        android:password="true"
        android:layout_margin="5dp"/>

    <EditText
        android:id="@+id/create_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_password2"
        android:hint="Handynummer"
        android:phoneNumber="true"
        android:layout_margin="5dp"/>

    <AutoCompleteTextView
        android:id="@+id/create_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_phone"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:layout_margin="5dp"
        android:autoText="false" />


    <Button
        android:id="@+id/button_create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Konto erstellen"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <AutoCompleteTextView
        android:id="@+id/create_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wohnort"
        android:singleLine="true"
        android:autoText="false"
        android:layout_below="@+id/create_email"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp" />

</RelativeLayout>
